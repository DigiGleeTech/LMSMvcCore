@model IEnumerable<LMSMvcCore.Models.Payment>

@{
    ViewData["Title"] = "My Payment Point";
}

<h3 class="text-dark mb-4">My PayPoint</h3>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">All Payments</p>
    </div>
    <div class="card-body">
            <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentDate)
                    </th>
                    <th>
                        Payment Month
                    </th>
                    <th>
                        Loan Acct. Balance
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NextDue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Loan.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OutStanding)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NextDue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Loan.Status)
                    </td>
                    <td>
                            @* <a asp-action="VerifyPayment" asp-route-id="@item.Id">Virify Payments</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Details</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
