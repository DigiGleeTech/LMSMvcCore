@model IEnumerable<LMSMvcCore.Models.Payment>

@{
    ViewData["Title"] = "Payment";
}

<div id="paymentView">
    <a asp-action="MakePayment" class="btn btn-info">Make Payment</a>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 fw-bold">Manage Payment</p>
        </div>
        <div class="card-body">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationUser.Name)
                        </th>
                        <th>
                            Amount Paid
                        </th>
                        <th>
                            Loan Balance
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Loan.TermMonth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NextDue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Loan.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OutStanding)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Loan.TermMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NextDue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Loan.Status)
                            </td>
                            <td>
                                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
