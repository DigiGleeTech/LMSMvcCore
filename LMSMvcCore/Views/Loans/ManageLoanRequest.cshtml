@model IEnumerable<LMSMvcCore.Models.Loan>

@{
    ViewData["Title"] = "Manage Loan Request";
}

<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">Manage Loan Request</p>
    </div>
    <div class="card-body">
        <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InterestRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    Total Payable Amount
                </th>
                <th>
                    Monthly Payable Amount
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(p=>p.Id == p.Id)) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InterestRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @(item.Amount + Convert.ToDecimal(item.InterestRate))
                    </td>
                    <td>
                        @(item.Amount / 4)
                    </td>
                    <td>
                        @if(item.Status.ToUpper() == "APPROVED" || item.Status.ToUpper() == "REJECTED")
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        }
                        else 
                        {
                            <a asp-action="ApproveLoad" asp-route-id="@item.Id" class="btn btn-success">Approve</a>
                            <a asp-action="RejectLoan" asp-route-id="@item.Id" class="btn btn-danger">Reject</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        }                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
