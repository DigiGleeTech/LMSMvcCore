@model LMSMvcCore.Models.Loan

@{
    ViewData["Title"] = "Apply For loan";
}

<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">Loan Application form</p>
    </div>
    <div class="card-body">
        <form asp-action="Applyloan" id="ApplyloanForm" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-6">
            <label asp-for="LoanType" class="control-label"></label>
            <select asp-for="LoanType" id="LoanTypeId" asp-items="ViewBag.LoanType" class="form-control">
                <option value=""> -- Select Loan Type --</option>
            </select>
            <span asp-validation-for="LoanType" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Salary" class="control-label"></label>
            <input asp-for="Salary" id="salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="InterestRate" class="control-label"></label>
                <input asp-for="InterestRate" disabled class="form-control InterestRate" />
            <span asp-validation-for="InterestRate" class="text-danger"></span>
        </div>
        <div  id="lblTotalAmount"></div>
        <div class="form-group col-md-6">
            <button type="button" class="btn btn-primary process" >Check Elibigilty</button>
        </div>
            <div class="row col-md-12" id="toggleDisplay">
            <div class="form-group col-md-6">
                <label asp-for="RankPosition" class="control-label"></label>
                <input asp-for="RankPosition" class="form-control" />
                <span asp-validation-for="RankPosition" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PVN" class="control-label"></label>
                <input asp-for="PVN" class="form-control" id="PVNumber" />
                <span id="PVNSpan"></span>
                <span asp-validation-for="PVN" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 mt-4">
                <input type="submit" id="btnApplyLoan" value="Create" class="btn btn-primary col-md-12" />
            </div>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
       
    </script>
}
